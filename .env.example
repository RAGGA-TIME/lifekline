# API Keys
VITE_GLM_API_KEY=your_glm_api_key_here
GLM_API_KEY=your_glm_api_key_here

# WeChat App ID (for WeChat H5 login)
# Get from WeChat Official Account Platform: https://mp.weixin.qq.com/
VITE_WECHAT_APP_ID=your_wechat_app_id_here

# Tencent Cloud SMS (for phone verification)
# Get from Tencent Cloud Console: https://console.cloud.tencent.com/sms
VITE_TENCENT_SECRET_ID=your_secret_id_here
VITE_TENCENT_SECRET_KEY=your_secret_key_here
VITE_TENCENT_SMS_APP_ID=your_sms_app_id_here
VITE_TENCENT_SMS_SIGN_NAME=your_sms_signature_here
VITE_TENCENT_SMS_TEMPLATE_ID=your_template_id_here

# Note: In development, you can use mock mode by leaving Tencent SMS variables empty

# Backend API Configuration
# Replace with your backend API URL (if using separate backend server)
VITE_API_BASE_URL=http://localhost:3000/api

# MySQL Database Configuration (for backend server only)
# This is NOT used by the frontend directly, but by the backend server
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=lifekline

